{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>skarllot/renovate-config"
  ],
  "reviewers": ["skarllot"],
  "assignees": ["skarllot"],
  "packageRules": [
    {
      "description": "Pin Marten for NET 6.0 compatibility",
      "matchDatasources": ["nuget"],
      "matchFileNames": ["**/Directory.Packages.Net6.props"],
      "matchPackageNames": ["Marten"],
      "allowedVersions": "< 8.0.0"
    }
  ]
}